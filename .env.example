# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=peppagenbi
DATABASE_USER=postgres
DATABASE_PASSWORD=your_database_password

# Application Configuration
DEBUG=True
LOG_LEVEL=INFO

# Redis Configuration (for session persistence)
# Local development: redis://localhost:6379/0
# Production (Upstash): redis://:password@host:port
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
USE_REDIS_SESSIONS=true
SESSION_TTL=86400

# Optional: LangSmith for observability (if using)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=peppasync-langchain
LANGCHAIN_API_KEY=your_langsmith_api_key